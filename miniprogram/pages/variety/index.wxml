<!--pages/variety/index.wxml-->
<view class="container">
  <CustomNavigation></CustomNavigation>
  <view class="c-variety">
    <view class="c-variety__community f-border-radius f-box-shadow-big" bindtap="enterVariety" data-name="社区" data-color="#b68ed4" data-isCommunity="1">
      <view class="u-name">社区</view>
      <view class="u-icon"></view>
    </view>
    <view class="c-variety__item f-border-radius f-box-shadow-big" wx:for="{{varieties}}" wx:key="index" style="--bgColor:{{item.Color}}" data-name="{{item.NoteBookName}}" data-color="{{item.Color}}" data-id="{{item.NoteBookId}}" data-isCommunity="" catchtap="enterVariety" catchlongpress="editVariety">
      <view class="u-icon"></view>
      <view class="u-name">{{item.NoteBookName}}</view>
    </view>
    <view class="c-variety__add f-border-radius f-box-shadow-big" catchtap="addVariety">
      <veiw class="u-icon"></veiw>
      <veiw class="u-name">新建</veiw>
    </view>
  </view>
  <CustomModal wx:if="{{isShowModal}}" caption="{{modalStatus===0?'新建笔记本':'编辑笔记本'}}" customContent="{{true}}" bind:parentConfirm="confirm" bind:parentCancel="cancel">
    <view class="c-edit">
      <input class="c-edit__input" placeholder="分类名" maxlength="8" model:value="{{newVarietyName}}" />
      <view class="c-edit__delete f-border-radius" wx:if="{{modalStatus===1}}" bindtap="showDelete"></view>
    </view>
    <view class="c-colorPicker">
      <view class="c-colorPicker__item {{colorIndex===0?'active':''}}" bindtap="setColor" data-index="0"></view>
      <view class="c-colorPicker__item {{colorIndex===1?'active':''}}" bindtap="setColor" data-index="1"></view>
      <view class="c-colorPicker__item {{colorIndex===2?'active':''}}" bindtap="setColor" data-index="2"></view>
      <view class="c-colorPicker__item {{colorIndex===3?'active':''}}" bindtap="setColor" data-index="3"></view>
      <view class="c-colorPicker__item {{colorIndex===4?'active':''}}" bindtap="setColor" data-index="4"></view>
      <view class="c-colorPicker__item {{colorIndex===5?'active':''}}" bindtap="setColor" data-index="5"></view>
    </view>
    <view class="u-delete"></view>
  </CustomModal>
  <CustomModal wx:if="{{isShowDelete}}" caption="是否删除" bind:parentConfirm="confirm" bind:parentCancel="cancel"></CustomModal>
</view>
